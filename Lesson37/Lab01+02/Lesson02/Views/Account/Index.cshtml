
@{
    var accounts = ViewBag.accounts;
}

<div class="row">
    @foreach(var item in accounts)
    {
        <div class="col-md-4">
            <div class="img-thumbnail">
                <img src="@item.Avatar" alt="Alternate Text" />
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>@item.Bio</p>
                    <p>
                        <a asp-controller="Account" asp-action="Profile" class="btn btn-danger">Profile</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
