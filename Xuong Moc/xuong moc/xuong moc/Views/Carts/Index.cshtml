@model IEnumerable<xuong_moc.Models.Cart>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-4">GIỎ HÀNG</h2>
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-lg-8">
                            @foreach (var item in Model)
                            {
                                var money = item.Price * item.Quantity;
                                <div class="border-bottom pb-3 mb-3 d-flex align-items-center">
                                    <div class="col-3">
                                        <img src="@item.Image" alt="@item.Name" class="img-fluid rounded">
                                    </div>
                                    <div class="col-6">
                                        <h5 class="mb-2">@item.Name</h5>
                                        <div class="d-flex align-items-center mb-2">
                                            <button class="btn btn-outline-secondary btn-sm me-2 qty_btn"><i class="fa fa-minus"></i></button>
                                            <input type="number" class="form-control form-control-sm qty_input text-center" value="@item.Quantity" style="width: 60px;">
                                            <button class="btn btn-outline-secondary btn-sm ms-2 qty_btn"><i class="fa fa-plus"></i></button>
                                        </div>
                                        <p class="mb-1 text-muted">Giá: <span>@string.Format("{0:#,##0}", @item.Price)</span> VND</p>
                                        <p class="mb-0 text-muted total-money" data-money="@money">Thành tiền: <span id="money">@string.Format("{0:#,##0}", @money)</span> VND</p>
                                    </div>
                                    <div class="col-3 text-end">
                                        <a href="/carts/remove/?id=@item.Id" class="btn btn-outline-danger btn-sm"><i class="fa fa-trash"></i></a>
                                        <a href="/carts/update/?id=@item.Id&quantity=@item.Quantity" data-id="@item.Id" data-qty="@item.Quantity" class="btn btn-outline-primary btn-sm ms-2">Cập nhật</a>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-lg-4">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h4 class="card-title text-center mb-3">Tóm tắt đơn hàng</h4>
                                    <p class="mb-2">Tổng thành tiền: <strong id="totalMoney">@string.Format("{0:#,##0}", ViewBag.total)</strong> VND</p>
                                    <p class="mb-2">Phí vận chuyển: <strong class="text-success">Free Ship</strong></p>
                                    <small class="text-muted">(Miễn phí vận chuyển với đơn hàng trên 10 triệu)</small>
                                    <hr>
                                    <p class="text-muted">Thông tin vận chuyển: Sản phẩm sẽ được giao trong vòng 2-7 ngày.</p>
                                    <p>Chi tiết liên hệ: <a href="tel:0978611889" class="text-decoration-none">0978 611 889</a></p>
                                    <hr>
                                    <h5 class="text-end">Tổng tiền: <strong id="totalMoneyPay">@string.Format("{0:#,##0}", ViewBag.total)</strong> VND</h5>
                                    <div class="d-grid gap-2 mt-3">
                                        <a href="/cart/orders" class="btn btn-primary btn-block">Đặt hàng ngay</a>
                                        <a href="/product" class="btn btn-secondary btn-block">Tiếp tục mua hàng</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
