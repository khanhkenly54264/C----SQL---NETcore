@model IEnumerable<xuong_moc.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}
<form method="get" asp-action="Index" class="mb-12">
    <div class="form-inline d-flex align-items-center ">
        <a style="margin-right:20ppx" class="btn btn-success" asp-action="Create">
            <i class="fas fa-plus"></i> Thêm Mới
        </a>
        <input type="text" id="searchString" name="searchString"
               value="@ViewData["SearchString"]" class="form-control me-2"
               placeholder="Nhập tên cần tìm">
        <button type="submit" class="btn btn-primary">Tìm</button>
    </div>

</form>
<table class="table">
    <thead>
        <tr style="text-align:center">
            <th>
                @Html.DisplayNameFor(model => model.Cid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th
            <th>
                @Html.DisplayNameFor(model => model.PriceOld)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceNew)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr style="text-align:center">
            <td>
                @Html.DisplayFor(modelItem => item.Cid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
           <td>
               <img src="@item.Image" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceOld)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceNew)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            
            
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
