@model xuong_moc.Models.Customer

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Tài khoản</th>
            <th>Tên</th>
            <th>Điện thoại</th>
            <th>Email</th>
            <th>Trạng thái</th>
            <th>Người tạo</th>
            <th>Ngày tạo</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Username</td>
            <td>@Model.Name</td>
            <td>@Model.Phone</td>
            <td>@Model.Email</td>
            <td>
                @if (Model.IsActive)
                {
                    <span style="color: green;">Đang hoạt động</span>
                }
                else
                {
                    <span style="color: red;">Đang khóa</span>
                }
            </td>
            <td>@Model.CreatedBy</td>
            <td>@Model.CreatedDate</td>
        </tr>
    </tbody>
</table>